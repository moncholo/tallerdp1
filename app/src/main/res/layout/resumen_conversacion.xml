<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="2dp"
        android:background="#80FFFFFF"
        android:onClick="abrirConversacion"

    android:id="@+id/relativeResumen">


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageEstado"
        android:src="@drawable/online"
        android:layout_above="@+id/textMensaje"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false" />

    <ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
        android:id="@+id/imagen"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario"
        android:textStyle="bold"
        android:id="@+id/textNickUsuario"
        android:layout_toRightOf="@+id/imagen"
        android:paddingLeft="7dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="fecha"
        android:id="@+id/textFechaResumen"
        android:textStyle="italic"
        android:layout_below="@+id/textMensaje"
        android:layout_toRightOf="@+id/imagen"
        android:layout_alignParentRight="false"
        android:gravity="right"
        android:paddingRight="7dp" />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="asd asdasd asd asd asd asd asfdefsdfsdfsdfsdfsdfsdf"
    android:id="@+id/textMensaje"
    android:singleLine="true"
        android:layout_toRightOf="@+id/imagen"
        android:layout_below="@+id/textNickUsuario"
        android:paddingLeft="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textFechaResumen"
        android:src="@drawable/separador"
        android:layout_toRightOf="@+id/imagen"
        android:layout_marginTop="2dp" />

</RelativeLayout>