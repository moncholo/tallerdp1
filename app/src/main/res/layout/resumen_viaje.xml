<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="2dp"
    android:background="#FFFFFF"

    android:id="@+id/relativeResumenViaje">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Destino"
        android:textStyle="bold"
        android:textColor="#FF17009A"
        android:id="@+id/textDestinoViaje"
        android:paddingLeft="7dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fecha Desde a Fecha Hasta"
        android:id="@+id/textFechasViaje"
        android:textColor="#FF17009A"
        android:singleLine="true"
        android:layout_below="@+id/textDestinoViaje"
        android:paddingLeft="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/separador"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/textFechasViaje" />

</RelativeLayout>