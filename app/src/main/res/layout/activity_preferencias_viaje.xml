<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.p2.tdpprueba.GustosActivity">

    <TextView
        android:id="@+id/labelSpinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Museos"
        android:textStyle="bold"/>

    <ar.uba.fi.taller2.mensajerocliente.utilidades.MultiSelectionSpinner
        android:id="@+id/spinner_museos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelSpinner1"
        />

    <TextView
        android:layout_below="@id/spinner_museos"
        android:id="@+id/labelSpinner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Restaurantes"
        android:textStyle="bold" />

    <ar.uba.fi.taller2.mensajerocliente.utilidades.MultiSelectionSpinner
        android:layout_below="@+id/labelSpinner2"
        android:id="@+id/spinner_restaurantes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_below="@id/spinner_restaurantes"
        android:id="@+id/labelSpinner3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bares"
        android:textStyle="bold"/>

    <ar.uba.fi.taller2.mensajerocliente.utilidades.MultiSelectionSpinner
        android:layout_below="@+id/labelSpinner3"
        android:id="@+id/spinner_bares"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_below="@id/spinner_bares"
        android:id="@+id/labelSpinner4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Atracciones"
        android:textStyle="bold"
        />

    <ar.uba.fi.taller2.mensajerocliente.utilidades.MultiSelectionSpinner
        android:layout_below="@+id/labelSpinner4"
        android:id="@+id/spinner_monumetos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/finalizar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Guardar SelecciÃ³n"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
